  "actions": [
    {
      "id": "changeTopText",
      "label": "Change Top Text",
      "parameters": [
        {
          "id": "newText",
          "label": "New Text",
          "type": "textarea"
        }
      ]
    },
    {
      "id": "changeMiddleText",
      "label": "Change Middle Text",
      "parameters": [
        {
          "id": "newText",
          "label": "New Text",
          "type": "textarea"
        }
      ]
    },
    {
      "id": "changeLowerText",
      "label": "Change Lower Text",
      "parameters": [
        {
          "id": "newText",
          "label": "New Text",
          "type": "textarea"
        }
      ]
    }
  ]
