{
  "name": "Signpost Arrow",
  "tags": ["signpost", "text", "interactive"],
  "category": "decorations",
  "model": "models/signpost/Sign_Arrow.glb",
  "parameters": [
    {
      "id": "text",
      "label": "Text",
      "type": "textarea",
      "default": "Some text"
    },
    {
      "id": "fontSize",
      "label": "Font Size",
      "type": "slider",
      "min": 12,
      "max": 40,
      "step": 0.5,
      "default": 20
    }
  ],
  "actions": [
    {
      "id": "changeText",
      "label": "Change Text",
      "parameters": [
        {
          "id": "newText",
          "label": "New Text",
          "type": "textarea"
        }
      ]
    }
  ]
}
